<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_pergmesa_comanda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARTAO: 000004"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"/>

    <View
        android:id="@+id/view_pergmesa_v1"
        android:layout_below="@+id/tv_pergmesa_comanda"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="#e0035c8c"/>

    <RelativeLayout
        android:id="@+id/rl_pergmesa_codeprod"
        android:layout_below="@+id/tv_pergmesa_comanda"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_height="?android:attr/actionBarSize">

        <TextView
            android:id="@+id/tv_pergmesa_noperador"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Mesa:"/>

        <TextView
            android:id="@+id/tv_pergmesa_codigo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:maxLength="6"
            android:layout_toRightOf="@+id/tv_loading_noperador"
            android:layout_toLeftOf="@+id/ib_loading_backspace"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>

        <ImageButton
            android:id="@+id/ib_pergmesa_backspace"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/backspace_colored"
            style="?android:attr/borderlessButtonStyle"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/ib_loading_backspace"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_height="0.5dp"
            android:background="#e0035c8c"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pergmesa_buttons"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/rl_pergmesa_codeprod"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_7"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="7"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:elevation="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="5"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_8"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="8"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_0"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_6"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="6"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_pergmesa_9"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:text="9"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:elevation="4dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_confirm_state"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ib_pergmesa_ok"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/button_shape_primary_color"
                    android:elevation="4dp"
                    android:src="@drawable/check"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_pergmesa_v2"
        android:layout_below="@+id/ll_pergmesa_buttons"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="#e0035c8c"/>

    <Button
        android:id="@+id/bt_pergmesa_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/view_pergmesa_v2"
        style="?android:attr/borderlessButtonStyle"/>
</RelativeLayout>