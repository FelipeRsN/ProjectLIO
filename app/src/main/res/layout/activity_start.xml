<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartActivity"
    android:orientation="vertical"
    android:layout_weight="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:elevation="8dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/bt_start_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/settings"
            android:text=" Configurações"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textAllCaps="false"
            android:textSize="18sp"
            style="?android:attr/borderlessButtonStyle"/>

        <ImageButton
            android:id="@+id/ib_start_backspace"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/backspace"
            style="?android:attr/borderlessButtonStyle"/>

        <TextView
            android:id="@+id/tv_start_tmesa"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF"
            android:text="COMANDA"/>

        <TextView
            android:id="@+id/tv_start_comanda"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentBottom="true"
            android:textSize="30sp"
            android:maxLength="6"
            android:layout_toRightOf="@+id/tv_start_tmesa"
            android:layout_toLeftOf="@+id/ib_start_backspace"
            android:textColor="#FFFFFF"
            android:text=""/>

        <View
            android:layout_below="@+id/tv_start_comanda"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="-11dp"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/ib_start_backspace"
            android:background="#e0ffffff"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_start_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_1"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_4"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="4"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_7"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="7"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/button_confirm_state"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:visibility="invisible"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="2"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_5"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="5"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_8"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="8"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_0"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_3"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="3"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_6"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="6"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/bt_start_9"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:text="9"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp"
                            android:elevation="4dp"
                            android:textStyle="bold"
                            android:background="@drawable/button_confirm_state"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/button_confirm_state"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:visibility="invisible"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:weightSum="3">

            <FrameLayout
                android:id="@+id/pedido"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pedido"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Pedido"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/colorWhite"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/preconta"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/preconta"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="pré-conta"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/colorWhite"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/pgto"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pgto"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Pagamento"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/colorWhite"/>

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
